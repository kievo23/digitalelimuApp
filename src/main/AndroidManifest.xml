<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.digitalelimu.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ClassesActivity"
            android:label="@string/title_activity_subtopics"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContentActivity"
            android:label="@string/title_activity_content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookActivity"
            android:label="@string/title_activity_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermActivity"
            android:label="@string/title_activity_term"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeekActivity"
            android:label="@string/title_activity_week"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LessonActivity"
            android:label="@string/title_activity_lesson"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubscribeActivity"
            android:label="@string/title_activity_subscribe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ForgotpassActivity"
            android:label="@string/title_activity_forgotpass"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResetcodeActivity"
            android:label="@string/title_activity_resetcode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewpasswordActivity"
            android:label="@string/title_activity_newpassword"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PesapalActivity"
            android:label="@string/title_activity_pesapal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PdfActivity"
            android:label="@string/title_activity_pdf"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ReadpdfActivity"
            android:label="@string/title_activity_readpdf"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PesapalclassActivity"
            android:label="@string/title_activity_pesapalclass"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>